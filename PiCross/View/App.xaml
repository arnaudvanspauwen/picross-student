<Application x:Class="View.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:windows="clr-namespace:View.Windows"
             xmlns:local="clr-namespace:View"
               xmlns:viewmodel ="clr-namespace:ViewModel;assembly=ViewModel">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodel:StartViewModel}">
            <windows:StartWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:GameViewModel}">
            <windows:GameWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:SelectWindowViewModel}">
            <windows:SelectWindow/>
        </DataTemplate>
    </Application.Resources>
</Application>