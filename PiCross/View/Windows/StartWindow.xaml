<UserControl x:Class="View.Windows.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"      
        mc:Ignorable="d"
        Height="800" Width="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="240"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Background="Transparent" Text="LET'S HAVE SOME FUN!" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" FontSize="80" FontFamily="Franklin Gothic Heavy"/>
        <Button  Command="{Binding Choose}" FontFamily="Franklin Gothic Heavy" FontSize="100"  Height="200" Width="300" HorizontalAlignment="Left" VerticalAlignment="top" Grid.Row="1" Margin="348,10,0,0">
            <Border>
                <TextBlock  Text="PLAY" TextAlignment="Center"  />
            </Border>
        </Button>
        <Button Command="{Binding Quit}" FontFamily="Franklin Gothic Heavy" FontSize="100"  Height="200" Width="600" HorizontalAlignment="Right" VerticalAlignment="top" Grid.Row="1" Margin="0,282,198,0">
            <Border>
                <TextBlock  Text="END GAME" TextAlignment="Center" />
            </Border>
        </Button>
    </Grid>
</UserControl>
